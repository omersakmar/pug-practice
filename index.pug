-
    const cards = [
        {
            name: "Nagihan Uslu",
            time: "Dün, 13:30'da Gönderdi",
            userImg: "/src/images/user-pp-1.svg",
            badgeImg: "/src/images/takim-oyuncusu-badge.svg",
            badgeTitle: "Takım Oyuncusu",
            stars: 3,
            comment: "Gerçek bir takım arkadaşısın. Birlikte çalışmanın çok zevkliydi aynı zamanda farklı açılardan bakmama yardımcı olsun, teşekkür ederim."
        },
        {
            name: "Mehmet Yilmaz",
            time: "Dün, 13:30'da Gönderdi",
            userImg: "/src/images/user-pp-2.svg",
            badgeImg: "/src/images/cesur-badge.svg",
            badgeTitle: "Cesur",
            stars: 3,
            comment: "Aliquam risus mauris, lacinia in finibus vel, maximus eu dui. Phasellus a pharetra magna, nec mattis massa. Maecenas sit amet sem pulvinar."
        },
    ]

doctype html
html(lang="en")
    head
        title FAQ
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
    body
        .juno-main
            .juno-main-container 
                h1 Tüm Rozetler 
                each entry in cards
                    .juno-card
                        .juno-card-header
                            .juno-card-header-badge
                                    img(src=entry.userImg)
                            .juno-card-header-left
                                .juno-card-header-title
                                    h3.juno-card-header-title-text #{entry.name}
                                .juno-card-header-subtitle
                                    p.juno-card-header-subtitle-text #{entry.time}
                        .juno-card-body
                            .juno-card-body-badge
                                img(src=entry.badgeImg)
                                .juno-card-body-badge-review 
                                    p.juno-card-body-badge-review-text #{entry.badgeTitle}
                                    each star in [...Array(entry.stars)] 
                                        span.juno-card-body-badge-review-star &#9733
                            .juno-card-body-comment
                                p.juno-card-body-comment-text #{entry.comment}